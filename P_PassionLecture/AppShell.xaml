<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="P_PassionLecture.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:P_PassionLecture"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="CadetBlue"
    Shell.TabBarTitleColor="BlanchedAlmond"
    Shell.TabBarUnselectedColor="DarkGray"
    Shell.TabBarForegroundColor="BlanchedAlmond"
    Shell.BackgroundColor="CadetBlue"
    Shell.TitleColor="Azure"
    Title="P_PassionLecture">

    <TabBar>
        <Tab Title="Accueil"  Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"></ShellContent>
        </Tab>
        <Tab Title="Recherche" Icon="search.png">
            <ShellContent ContentTemplate="{DataTemplate local:SearchPage}"></ShellContent>
        </Tab>
    </TabBar>

</Shell>
