<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P_PassionLecture.Views.BookDetailPage"
             Title="Détails du livre">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="10">
            <Label Text="{Binding Book.titre}" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding Book.resume}" FontSize="16" />
            <Label Text="{Binding Book.nbPages, StringFormat='Pages: {0}'}" />
            <Label Text="{Binding Book.anneeEdition, StringFormat='Publié: {0:yyyy}'}" />

            <Entry Placeholder="Enter tag" Text="{Binding NewTag}" />
            <Button Text="Add Tag" Command="{Binding AddTagCommand}" />

            <Label Text="Tags:" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding Tags}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="5" Margin="2" BackgroundColor="LightGray" CornerRadius="10">
                            <Label Text="{Binding Name}" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
